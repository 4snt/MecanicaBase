<actions>
    <!-- Ação para rodar o modo Terminal -->
    <action>
        <actionName>run-terminal</actionName>
        <packagings>
            <packaging>jar</packaging>
        </packagings>
        <goals>
            <goal>javafx:run</goal>
        </goals>
        <properties>
            <main.class>mecanicabase.MecanicaBase</main.class>
            <exec.args></exec.args>
            <exec.appArgs></exec.appArgs>
            <exec.vmArgs></exec.vmArgs>
            <exec.workingdir>${project.basedir}</exec.workingdir>
        </properties>
    </action>

    <!-- Ação para rodar o modo Interface (JavaFX) -->
    <action>
        <actionName>run-interface</actionName>
        <packagings>
            <packaging>jar</packaging>
        </packagings>
        <goals>
            <goal>javafx:run</goal>
        </goals>
        <properties>
            <main.class>mecanicabase.MecanicaBase</main.class>
            <exec.args></exec.args>
            <exec.appArgs></exec.appArgs>
            <exec.vmArgs></exec.vmArgs>
            <exec.workingdir>${project.basedir}</exec.workingdir>
        </properties>
    </action>
</actions>
